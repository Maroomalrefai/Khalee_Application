<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Question"
    android:background="#FFF9EA">


    <TextView
        android:id="@+id/Birth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="sans-serif-thin"
        android:gravity="center"
        android:text="Birth of Date?"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/editTextDate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.118"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextDate"
        android:layout_width="349dp"
        android:layout_height="61dp"
        android:ems="10"
        android:hint="dd/mm/yy"
        android:inputType="date"
        app:layout_constraintBottom_toTopOf="@+id/qustionparta"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Birth" />


    <TextView
        android:id="@+id/qustionparta"
        android:layout_width="305dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="34dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="72dp"
        android:fontFamily="sans-serif-thin"
        android:gravity="center"
        android:text="Do you suffer from a type of "
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/qustionpartb"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextDate" />

    <TextView
        android:id="@+id/qustionpartb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="34dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="240dp"
        android:layout_marginBottom="4dp"
        android:fontFamily="sans-serif-thin"
        android:text="food allergy?"
        android:textColor="#FFCC00"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/qustionparta" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="81dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/qustionparta"

        app:layout_constraintVertical_bias="0.202">

        <CheckBox
            android:id="@+id/treenut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:padding="16dp"
            android:text="Tree nut."
            android:textColor="@color/black"
            android:textSize="24sp"
            app:buttonTint="#FDB441" />

        <CheckBox
            android:id="@+id/gluten"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:padding="16dp"
            android:text="Gluten."
            android:textColor="@color/black"
            android:textSize="24sp"
            app:buttonTint="#FDB441" />

        <CheckBox
            android:id="@+id/lactose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:padding="16dp"
            android:text="Lactose."
            android:textColor="@color/black"
            android:textSize="24sp"
            app:buttonTint="#FDB441" />

        <CheckBox
            android:id="@+id/peannut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:padding="16dp"
            android:text="peanut."
            android:textColor="@color/black"
            android:textSize="24sp"
            app:buttonTint="#FDB441" />

        <CheckBox
            android:id="@+id/egg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:padding="16dp"
            android:text="Eggs."
            android:textColor="@color/black"
            android:textSize="24sp"
            app:buttonTint="#FDB441" />

    </LinearLayout>

    <Button
        android:id="@+id/Next"
        android:layout_width="248dp"
        android:layout_height="55dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="12dp"
        android:text="Next"
        android:textSize="24sp"
        android:textStyle="bold"
        app:backgroundTint="#FDB441"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />
</androidx.constraintlayout.widget.ConstraintLayout>