<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="false"
    android:layoutDirection="ltr"
    android:background="#FEFEFE"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="30dp">

        <TextView
            android:id="@+id/qustionparta"
            android:layout_width="305dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/tiltneon"
            android:gravity="center"
            android:text="Do you suffer from a type of "
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/qustionpartb"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/qustionpartb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/tiltneon"
            android:text="food allergy?"
            android:textColor="#FE8247"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/qustionparta" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:orientation="vertical"
            android:padding="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/qustionparta"
            app:layout_constraintVertical_bias="0.202">


            <CheckBox
                android:id="@+id/treenut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:fontFamily="@font/tiltneon"
                android:textStyle="bold"
                android:padding="16dp"
                android:text="Tree Nut."
                android:textColor="@color/black"
                android:textSize="22sp"
                app:buttonTint="#4F7D94" />

            <CheckBox
                android:id="@+id/gluten"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:padding="16dp"
                android:text="Gluten."
                android:fontFamily="@font/tiltneon"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="22sp"
                app:buttonTint="#4F7D94" />

            <CheckBox
                android:id="@+id/lactose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/tiltneon"
                android:textStyle="bold"
                android:checked="false"
                android:padding="16dp"
                android:text="Lactose."
                android:textColor="@color/black"
                android:textSize="22sp"
                app:buttonTint="#4F7D94" />

            <CheckBox
                android:id="@+id/peannut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/tiltneon"
                android:textStyle="bold"
                android:checked="false"
                android:padding="16dp"
                android:text="Peanut."
                android:textColor="@color/black"
                android:textSize="22sp"
                app:buttonTint="#4F7D94" />
            <CheckBox
                android:id="@+id/seafood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/tiltneon"
                android:textStyle="bold"
                android:checked="false"
                android:padding="16dp"
                android:text="Sea Food."
                android:textColor="@color/black"
                android:textSize="22sp"
                app:buttonTint="#4F7D94" />
            <CheckBox
                android:id="@+id/seasem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/tiltneon"
                android:textStyle="bold"
                android:checked="false"
                android:padding="16dp"
                android:text="Seasem."
                android:textColor="@color/black"
                android:textSize="22sp"
                app:buttonTint="#4F7D94" />

            <CheckBox
                android:id="@+id/egg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/tiltneon"
                android:textStyle="bold"
                android:checked="false"
                android:padding="16dp"
                android:text="Eggs."
                android:textColor="@color/black"
                android:textSize="22sp"
                app:buttonTint="#4F7D94" />
            <CheckBox
                android:id="@+id/soy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/tiltneon"
                android:textStyle="bold"
                android:checked="false"
                android:padding="16dp"
                android:text="Soy."
                android:textColor="@color/black"
                android:textSize="22sp"
                app:buttonTint="#4F7D94" />

            <CheckBox
                android:id="@+id/musterd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/tiltneon"
                android:textStyle="bold"
                android:checked="false"
                android:padding="16dp"
                android:text="Musterd."
                android:textColor="@color/black"
                android:textSize="22sp"
                app:buttonTint="#4F7D94" />


        </LinearLayout>

        <TextView
            android:id="@+id/qestintwoa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/tiltneon"
            android:gravity="center"
            android:text="Do you avoid any Individual"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintVertical_bias="0.202" />
        <TextView
            android:id="@+id/qusetiontwob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/tiltneon"
            android:gravity="center"
            android:text="Ingredients?"
            android:textColor="#FE8247"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintVertical_bias="0.202" />
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            app:boxStrokeColor="#4F7D94"
            app:hintTextColor="#4F7D94">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ingrediant"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/tiltneon"
                android:textSize="18sp"
                android:textStyle="bold"
                android:hint="write your ingredients"
                android:inputType="text"
                />

        </com.google.android.material.textfield.TextInputLayout>


        <TextView
            android:id="@+id/policess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-light"
            android:layout_marginTop="30dp"
            android:text="** Please note that while our platform assists in product selection, we do not assume responsibility for any adverse reactions. For personalized advice, it's essential to consult your healthcare provider."
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintVertical_bias="0.202" />
        <RadioButton
            android:id="@+id/agree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-light"
            android:layout_marginLeft="10dp"
            android:button="?android:attr/listChoiceIndicatorMultiple"
            android:text="I agree"
            android:textStyle="bold"
            android:textSize="18sp"
            app:buttonTint="#4F7D94" />

        <Button
            android:id="@+id/save"
            android:layout_width="248dp"
            android:layout_height="55dp"
            android:layout_marginTop="12dp"
            android:text="Save"
            android:layout_gravity="center"
            android:textSize="24sp"
            android:textStyle="bold"
            app:rippleColor="#FAF0C7"
            app:backgroundTint="#4F7D94"
            android:enabled="false"
            android:fontFamily="@font/tiltneon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" />
    </LinearLayout>
</ScrollView>